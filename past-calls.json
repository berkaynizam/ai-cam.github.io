---
layout: null
permalink: /calls/category/past-calls.json
---
{% assign filtered_calls = site.calls | where: 'call_categories', 'Past Calls' %}
{% if filtered_calls.size > 0 %}
{% assign sorted_calls = filtered_calls | sort: 'call_date' | reverse %}
[
  {% for call in sorted_calls %}
  {
    "slug": "{{ call.slug }}",
    "title": {{ call.title | jsonify }},
    "url": "{{ call.url }}",
    "call_categories": {{ call.call_categories | jsonify }},
    "cover_image": {% if call.cover_image %}"{{ call.cover_image | relative_url }}"{% else %}null{% endif %},
    "call_date": {% if call.call_date %}"{{ call.call_date }}"{% else %}null{% endif %},
    "application_deadline": {% if call.application_deadline %}"{{ call.application_deadline }}"{% else %}null{% endif %}
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
{% else %}
[]
{% endif %}

